{
  "name": "storefront-bff",
  "version": "1.0.0",
  "main": "./src/index.js",
  "author": "Alex Manatskyi",
  "license": "MIT",
  "engines": {
    "node": "12.x"
  },
  "private": true,
  "nodemonConfig": {
    "watch": [
      "../@sfcc-core",
      "../@sfcc-bff"
    ],
    "ext": "js",
    "ignore": [
      "src/**/*.spec.js",
      "src/**/*.test.js"
    ],
    "exec": "cross-env NODE_ENV=development node -r esm --nolazy --inspect=9229 ./src/index.js"
  },
  "scripts": {
    "start": "node -r esm ./src/index.js",
    "start:dev": "run-p watch:server",
    "watch:server": "nodemon",
    "build": ""
  },
  "dependencies": {
    "@sfcc-bff/productapi": "1.0.0-alpha.2",
    "@sfcc-core/apiconfig": "1.0.0-alpha.2",
    "@sfcc-core/core": "1.0.0-alpha.2",
    "@sfcc-core/core-graphql": "1.0.0-alpha.2",
    "@sfcc-core/logger": "1.0.0-alpha.2",
    "apollo-boost": "^0.4.7",
    "apollo-server": "^2.3.2",
    "apollo-server-express": "^2.3.2",
    "colors": "^1.3.2",
    "concurrently": "^5.0.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.2",
    "esm": "^3.2.25",
    "express-session": "^1.17.0",
    "graphql": "14.6.0",
    "graphql-passport": "^0.6.1",
    "passport": "^0.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.19.1",
    "fs-extra": "^9.0.0",
    "jest": "^25.2.4",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5"
  }
}
